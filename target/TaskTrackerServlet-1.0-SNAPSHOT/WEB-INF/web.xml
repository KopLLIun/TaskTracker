<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>TaskListServlet</servlet-name>
        <servlet-class>com.intexsoft.nikita.controller.task_controller.TaskListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TaskListServlet</servlet-name>
        <url-pattern>/taskList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateTaskServlet</servlet-name>
        <servlet-class>com.intexsoft.nikita.controller.task_controller.CreateTaskServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateTaskServlet</servlet-name>
        <url-pattern>/createTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditTaskServlet</servlet-name>
        <servlet-class>com.intexsoft.nikita.controller.task_controller.EditTaskServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditTaskServlet</servlet-name>
        <url-pattern>/editTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <servlet-class>com.intexsoft.nikita.controller.task_controller.DeleteTaskServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteTaskServlet</servlet-name>
        <url-pattern>/deleteTask</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>logFilter</filter-name>
        <filter-class>com.intexsoft.nikita.filter.LogFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>logFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>